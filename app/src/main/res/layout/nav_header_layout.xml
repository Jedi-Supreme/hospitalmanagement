<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#4DD0E1"
    android:padding="@dimen/margin_small">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_pro_pic"
        android:layout_width="@dimen/pro_pic_dim"
        android:layout_height="@dimen/pro_pic_dim"
        android:src="@drawable/profile_pic_default"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_tiny"
        android:layout_marginTop="@dimen/margin_tiny"
        android:padding="@dimen/margin_tiny"
        android:text="Jedidiah Assisi"
        android:textSize="@dimen/med_text"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/nav_pro_pic"
        app:layout_constraintTop_toTopOf="@id/nav_pro_pic" />

    <TextView
        android:id="@+id/nav_tv_facility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_tiny"
        android:layout_marginTop="@dimen/margin_tiny"
        android:padding="@dimen/margin_tiny"
        android:text="Michel Camp"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/nav_pro_pic"
        app:layout_constraintTop_toBottomOf="@id/nav_tv_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>